<div id='page_content'>
  <div class='page-header'>
    <h2>
      Sign In
    </h2>
  </div>

  <div class='page-body'>
    <%= form_for @session, url: sessions_url, html: {class: 'form-horizontal'} do |f| %>

      <% if f.object.errors[:base].present? %>
        <% flash[:alert] = f.object.errors[:base].first %>
      <% end %>

      <div class='form-group <%= error_class_for(f.object, :email) %>'>
        <%= f.label :email, class: 'col-sm-2 control-label' %>
        <div class='col-sm-4'>
          <%= f.email_field :email, class: 'form-control', placeholder: 'Enter email' %>
          <%= error_messages_for(f.object, :email) %>
        </div>
      </div>

      <div class='form-group <%= error_class_for(f.object, :password) %>'>
        <%= f.label :password, class: 'col-sm-2 control-label' %>
        <div class='col-sm-4'>
          <%= f.password_field :password, class: 'form-control', placeholder: 'Enter password' %>
          <%= error_messages_for(f.object, :password) %>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-10'>
          <div class='checkbox'>
            <label>
              <%= f.check_box :is_admin %> Admin?
            </label>
          </div>
        </div>
      </div>

      <div class='form-group'>
        <div class='col-sm-offset-2 col-sm-4'>
          <%= f.submit 'Sign In', class: 'btn btn-primary' %>
        </div>
      </div>

    <% end %>
  </div>
</div>
